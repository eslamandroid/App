<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="products"
            type="com.eaapps.myapplication.Products" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp"
            android:src="@{products.imageRes}"
            android:id="@+id/proImage"
            android:layout_marginTop="20dp"
            android:layout_height="72dp"
             tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/title"
            android:gravity="start"
            android:text="@{products.title}"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            app:layout_constraintStart_toEndOf="@id/number"
            app:layout_constraintTop_toTopOf="@id/proImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/number"
            android:text="@{ `x`+products.number}"
            android:textSize="14sp"
            android:gravity="start"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintStart_toEndOf="@id/proImage"
            app:layout_constraintTop_toTopOf="@id/title" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/desc"
            android:gravity="start"
            android:text="@{products.description}"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/total"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:fontFamily="@font/book"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toEndOf="@id/proImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/total"
            android:gravity="start"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="5dp"
            android:textColor="@color/coral_red"
            android:fontFamily="@font/bold"
            android:text="@{products.total +`   ر.س`}"
            app:layout_constraintBottom_toBottomOf="@id/proImage"
            app:layout_constraintStart_toEndOf="@id/proImage" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>