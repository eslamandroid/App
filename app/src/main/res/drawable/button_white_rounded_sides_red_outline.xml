<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?colorControlHighlight"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/lavender_grey" />
                    <corners android:radius="64.0dip" />
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape>
                    <stroke android:width="1.0dip" android:color="@color/pastel_blue" />
                    <corners android:radius="64.0dip" />
                </shape>
            </item>
            <item>
                <shape>
                    <stroke android:width="1.0dip" android:color="@color/coral_red" />
                    <corners android:radius="64.0dip" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>